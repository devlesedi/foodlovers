{{#extend "stylesheets"}}
{{/extend}}
<div class="page home">
	{{> nav title='Local Market' black=true}}
	<div class="content-scrollable">
		<div class="bg-image home">
			<h1 class="title-home" style="text-align:center;color:#fff;">
				<img src="/img/app/logo.png" style="width:100px" alt="Food Lovers Market">
        <div>Food Lovers</div>
			</h1>
			<span class="hours"><span class="title-callout">Hours</span>
        	Monâ€“Fri 9-6pm, Sat 10-5pm</span>
        	<span class="arrow"></span>
		</div>
		<div class="callout-news">
			<span class="title-callout">News Flash</span>
		</div>
		<h2 class="list-title">Activities</h2>
		<div class="list-subtitle">What others are up to.</div>
		<div class="list-activities">
        {{#each activities}}
          <!-- TODO: activity hbs -->
        {{else}}
          <div class="wrapper-message">
            <div class="title-message">No one is cooking yet!</div>
            <div class="subtitle-message">Share that you made a recipe and it will show up here.</div>
          </div>
        {{/each}}
      </div>
      <a href="pizza" class="btn-primary">See our pizza menu</a>

      <h2 class="list-title">On Sale!</h2>
      <div class="list-subtitle">Hand-picked by neighborhood chefs</div>
      <div class="list-recipes">
        {{#each products}}
          {{> productItem item=this size='small'}}
        {{/each}}
      </div>
      <a href="products" class="btn-primary">Explore more</a>
	</div>
</div>
