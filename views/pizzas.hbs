{{#extend "stylesheets"}}
{{/extend}}
  <div class="page recipes">
    {{> nav title='Pizza' black=true}}

    <div class="content-scrollable">
      <div class="list-recipes">
        {{#each products}}
          {{#if highlighted}}
            {{> pizzaItem item=this size='large'}}
          {{else}}
            {{> pizzaItem item=this size='small'}}
          {{/if}}
        {{/each}}
      </div>
    </div>

  </div>
{{#extend "scripts"}}
{{/extend}}